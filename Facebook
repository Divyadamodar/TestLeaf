package wekk2.day2;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

import io.github.bonigarcia.wdm.WebDriverManager;

public class FaceBook {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		WebDriverManager.chromedriver().setup();
		String driverPath=System.getProperty("webdriver.chrome.driver");
		System.out.println(driverPath);
		ChromeDriver driver=new ChromeDriver();
		driver.get("http://en-gb.facebook.com/");
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));
		driver.findElement(By.linkText("Create New Account")).click();
		driver.findElement(By.name("firstname")).sendKeys("divya");
		driver.findElement(By.name("lastname")).sendKeys("dd");
		driver.findElement(By.name("reg_email__")).sendKeys("abc@gmail.com");
        driver.findElement(By.name("reg_passwd__")).click();
        WebElement birthday =driver.findElement(By.id("day"));
		Select dd=new Select(birthday);
		dd.selectByIndex(4);
		 WebElement birthday_month =driver.findElement(By.id("month"));
			Select ee=new Select(birthday_month);
			ee.selectByIndex(8);
			 WebElement birthday_year =driver.findElement(By.id("year"));
				Select ff=new Select(birthday_year);
				ff.selectByVisibleText("1990");
				driver.findElement(By.className("_58mt")).click();
				
	}
 
}
